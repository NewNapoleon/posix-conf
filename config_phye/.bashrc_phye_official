# For settings that are only available on Cisco Official Servers

# Global ENVs--- 
export SANITY=/auto/crdc_iptv/sanity_crdc/automation
export AUTO_HOME=/auto/crdc_iptv/phye
export LD_LIBRARY_PATH="$AUTO_HOME/lib64:$AUTO_HOME/lib:$HOME/lib:$HOME/lib64:$LD_LIBRARY_PATH"

# Aliases  --- 
alias gosanity="cd $SANITY"
alias pp="ps -ef | grep phye"

# Servers specific ---
if [[ $HOSTNAME == sha-iptv-edit* ]]; then
    source ~/.bashrc_phye_ES
    echo "Edit Server related settings sourced"
elif [[ $HOSTNAME == sha-iptv-ats* ]]; then
    source ~/.bashrc_phye_ATS
    echo "ATS Server related settings sourced"
else
    echo "No $HOSTNAME specific settings sourced"
fi;

#Vim Specific for Cisco Servers ..
if [ `uname -m` == x86_64 ]; then 
    echo "Using x86_64 vim"
    alias vim="/auto/crdc_iptv/phye/bin/vim"
    alias vi="/auto/crdc_iptv/phye/bin/vim"
else 
    echo "Using i686 vim"
    alias vim="/usr/bin/vim"
    alias vi="/usr/bin/vim"
fi 
